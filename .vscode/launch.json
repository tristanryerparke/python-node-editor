{
    "configurations": [
      {
        "name": "Frontend",
        "type": "node-terminal",
        "request": "launch",
        "cwd": "${workspaceFolder}/src/pne_frontend",
        "command": "bun run dev",
        "env": {
          "VITE_MAX_FILE_SIZE_MB": "2",
          "BROWSER": "safari"
        }
      },
      {
        "name": "Backend",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "module": "pne_backend.main",
        "console": "integratedTerminal",
        "env": {
          "VITE_MAX_FILE_SIZE_MB": "2"
        },
        "justMyCode": true,
        "pythonPath": "${command:python.interpreterPath}"
      },
      {
        "name": "Python: Current File",
        "type": "python",
        "request": "launch",
        "program": "${file}",
        "console": "integratedTerminal",
        "justMyCode": false
      }
    ],
    "compounds": [
      {
        "name": "Full Program",
        "configurations": ["Backend", "Frontend"]
      }
    ]
  }