{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Frontend",
        "type": "node-terminal",
        "request": "launch",
        "cwd": "${workspaceFolder}/frontend",
        "command": "bun run dev",
        "preLaunchTask": "wait"
      },
      {
        "name": "Backend",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}/backend",
        "program": "${workspaceFolder}/backend/main.py",
        "console": "integratedTerminal",
      },
      {
        "name": "Native Window",
        "type": "python",
        "request": "launch",
        "cwd": "${workspaceFolder}/backend",
        "program": "${workspaceFolder}/backend/native_window.py",
        "console": "integratedTerminal"
      }
    ],
    "compounds": [
      {
        "name": "Full Program",
        "configurations": ["Backend", "Frontend"]
      }
    ]
  }